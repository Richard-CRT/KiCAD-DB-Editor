<UserControl x:Class="KiCAD_DB_Editor.UserControl_Library"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KiCAD_DB_Editor"
             xmlns:vm="clr-namespace:KiCAD_DB_Editor.ViewModel"
             xmlns:conv="clr-namespace:KiCAD_DB_Editor.View.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Style x:Key="TreeViewItemStyle_ExpandAll" TargetType="{x:Type TreeViewItem}">
            <Setter Property="IsExpanded" Value="True"/>
            <Setter Property="Tag" Value="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:UserControl_Library}}, Path=LibraryVM}"></Setter>
            <Setter Property="ContextMenu">
                <Setter.Value>
                    <ContextMenu>
                        <MenuItem Header="New Sub-Folder..."
                            Command="{Binding PlacementTarget.Tag.NewSubLibraryCommand, RelativeSource={RelativeSource AncestorType={x:Type ContextMenu},Mode=FindAncestor}}"
                            CommandParameter="{Binding }"></MenuItem>
                        <MenuItem Header="Edit Folder..."
                            Command="{Binding PlacementTarget.Tag.EditSubLibraryCommand, RelativeSource={RelativeSource AncestorType={x:Type ContextMenu},Mode=FindAncestor}}"
                            CommandParameter="{Binding }"></MenuItem>
                        <MenuItem Header="Delete Folder..."
                            Command="{Binding PlacementTarget.Tag.DeleteSubLibraryCommand, RelativeSource={RelativeSource AncestorType={x:Type ContextMenu},Mode=FindAncestor}}"
                            CommandParameter="{Binding }"></MenuItem>
                    </ContextMenu>
                </Setter.Value>
            </Setter>
        </Style>
        <conv:TreeViewItemVM_to_FolderVM_Converter x:Key="TreeViewItemVM_to_FolderVM_Converter" />
        <conv:TreeViewItemVM_to_CategoryVM_Converter x:Key="TreeViewItemVM_to_CategoryVM_Converter" />
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition MinWidth="200"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="3*" MinWidth="300"/>
        </Grid.ColumnDefinitions>
        <TreeView x:Name="treeView_FoldersAndCategories"
                  ItemsSource="{Binding LibraryVM.TopLevelFolderVMs, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:UserControl_Library}}}"
                  ItemContainerStyle="{StaticResource TreeViewItemStyle_ExpandAll}"
                  >
            <TreeView.Resources>
                <HierarchicalDataTemplate ItemsSource="{Binding TreeViewItemVMs}" DataType="{x:Type vm:TreeViewItemVM}">
                    <StackPanel Orientation="Horizontal">
                        <Rectangle Width="10" Height="10">
                            <Rectangle.Fill>
                                <SolidColorBrush Color="{Binding TreeViewIconColour}"/>
                            </Rectangle.Fill>
                        </Rectangle>
                        <TextBlock Text="{Binding Name}" />
                    </StackPanel>
                </HierarchicalDataTemplate>
            </TreeView.Resources>
        </TreeView>
        <GridSplitter Grid.Column="1" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="3,0,3,0" Width="3" />
        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <local:UserControl_Folder Grid.Row="0" FolderVM="{Binding SelectedItem, Converter={StaticResource TreeViewItemVM_to_FolderVM_Converter}, ElementName=treeView_FoldersAndCategories, Mode=OneWay}" />
            <local:UserControl_Category Grid.Row="1" CategoryVM="{Binding SelectedItem, Converter={StaticResource TreeViewItemVM_to_CategoryVM_Converter}, ElementName=treeView_FoldersAndCategories, Mode=OneWay}" />
        </Grid>
    </Grid>
</UserControl>
