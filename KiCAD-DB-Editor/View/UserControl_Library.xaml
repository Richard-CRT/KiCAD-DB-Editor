<UserControl x:Class="KiCAD_DB_Editor.UserControl_Library"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KiCAD_DB_Editor"
            xmlns:vm="clr-namespace:KiCAD_DB_Editor.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Style x:Key="TreeViewItemStyle_ExpandAll" TargetType="{x:Type TreeViewItem}">
            <Setter Property="IsExpanded" Value="True"/>
            <EventSetter Event="PreviewMouseDown" Handler="treeViewItem_PreviewMouseDown"/>
            <Setter Property="Tag" Value="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:UserControl_Library}}, Path=LibraryVM}"></Setter>
            <Setter Property="ContextMenu">
                <Setter.Value>
                    <ContextMenu>
                        <MenuItem Header="New Sub-Folder..."
                            Command="{Binding PlacementTarget.Tag.NewSubLibraryCommand, RelativeSource={RelativeSource AncestorType={x:Type ContextMenu},Mode=FindAncestor}}"
                            CommandParameter="{Binding }"></MenuItem>
                        <MenuItem Header="Edit Folder..."
                            Command="{Binding PlacementTarget.Tag.EditSubLibraryCommand, RelativeSource={RelativeSource AncestorType={x:Type ContextMenu},Mode=FindAncestor}}"
                            CommandParameter="{Binding }"></MenuItem>
                        <MenuItem Header="Delete Folder..."
                            Command="{Binding PlacementTarget.Tag.DeleteSubLibraryCommand, RelativeSource={RelativeSource AncestorType={x:Type ContextMenu},Mode=FindAncestor}}"
                            CommandParameter="{Binding }"></MenuItem>
                    </ContextMenu>
                </Setter.Value>
            </Setter>

        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TreeView x:Name="treeView_SubLibraries"
                  ItemsSource="{Binding LibraryVM.TopLevelSubLibraryVMs, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:UserControl_Library}}}"
                  ItemContainerStyle="{StaticResource TreeViewItemStyle_ExpandAll}"
                  MouseMove="treeView_SubLibraries_MouseMove"
                  DragOver="treeView_SubLibraries_DragOver"
                  Drop="treeView_SubLibraries_Drop"
                  AllowDrop="True"
                  >
            <TreeView.Resources>
                <HierarchicalDataTemplate ItemsSource="{Binding SubLibraryVMs}" DataType="{x:Type vm:SubLibraryVM}">
                    <TextBlock Text="{Binding Name}"></TextBlock>
                </HierarchicalDataTemplate>
            </TreeView.Resources>
        </TreeView>
        <GridSplitter Grid.Column="1" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="1,0,1,0" />
        <local:UserControl_SubLibrary Grid.Column="2" SubLibraryVM="{Binding SelectedItem, ElementName=treeView_SubLibraries, Mode=OneWay}" />
    </Grid>
</UserControl>
