<Window x:Class="KiCAD_DB_Editor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KiCAD_DB_Editor"
        xmlns:vm="clr-namespace:KiCAD_DB_Editor.ViewModel"
        mc:Ignorable="d"
        Title="{Binding WindowTitle, Mode=TwoWay}" Height="450" Width="800" Loaded="Window_Loaded">
    <Window.DataContext>
        <vm:MainWindowVM />
    </Window.DataContext>
    <DockPanel>
        <Button DockPanel.Dock="Top" Command="{Binding SaveLibraryCommand, Mode=OneWay}" Content="Save"></Button>
        <local:UserControl_Library DockPanel.Dock="Top" LibraryVM="{Binding LibraryVM}" Margin="5,5,5,5" />
    </DockPanel>
</Window>
